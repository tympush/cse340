<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<div id="managementLinkContainer">
  <a href="./add-classification" class="managementLink">Add New Classification</a>
  <a href="./add-inventory" class="managementLink">Add New Inventory</a>
</div>

<h2 class="management-text">Manage Inventory</h2>
<p class="management-text">Select a classification from the list to see the items belonging to the classification.</p>

<div class="classification-select-container">
<% if (typeof classificationList !== 'undefined' && classificationList) { %>
  <%- classificationList %>
<% } else { %>
  <select id="classificationList">
    <option value="">No classifications available</option>
  </select>
<% } %>
</div>

<table id="inventoryDisplay"></table>

<noscript>JavaScript must be enabled to use this page.</noscript>

<script src="../../js/inventory.js"></script>