<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>
    
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form action="/inv/add-classification" method="post">
    <label for="cname">Classification Name:</label>

    <small>
        classification name cannot contain spaces or special characters!
    </small>

    <input type="text" id="cname" name="classification_name" required pattern="^[a-zA-Z0-9]*$" value="<%= locals.classification_name %>">
    
    <button type="submit">Create</button>
</form>